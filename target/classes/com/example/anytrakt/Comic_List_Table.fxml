<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="Comic_List_Anchor" prefHeight="543.0" prefWidth="975.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.anytrakt.ComicListTableController">
    <top>
        <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #98dbff; -fx-border-color: Black; -fx-border-width: 4 4 4 4;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="95.0" prefWidth="1082.0" text="Comic" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="39.0" />
                    </font>
                </Label>
            </children></HBox>
    </top>
    <center>
        <TableView fx:id="Comic_Table" prefHeight="250.0" prefWidth="820.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="Title_col" prefWidth="297.0" text="Title" />
                <TableColumn fx:id="Author_col" prefWidth="210.0" text="Author" />
                <TableColumn fx:id="Publish_Year_col" minWidth="0.0" prefWidth="138.0" text="Publish Year" />
                <TableColumn fx:id="Genre_col" prefWidth="160.0" text="Genre" />
                <TableColumn fx:id="Rating_col" prefWidth="147.0" text=" Rating" />
            </columns>
        </TableView>
    </center>
    <left>
        <VBox prefHeight="250.0" prefWidth="13.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <VBox prefHeight="250.0" prefWidth="9.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #98dbff; -fx-border-color: Black; -fx-border-width: 4 4 4 4;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #13efda;">
                    <children>
                        <TextField fx:id="title_text" prefHeight="59.0" prefWidth="237.0" promptText="Title_text" />
                        <TextField fx:id="Author_text" layoutX="10.0" layoutY="10.0" prefHeight="59.0" prefWidth="223.0" promptText="Author_text" />
                        <TextField fx:id="Publish_Year_text" layoutX="159.0" layoutY="10.0" prefHeight="59.0" prefWidth="207.0" promptText="Publish_Year_text" />
                  <ComboBox fx:id="GenreComboBox" prefHeight="59.0" prefWidth="134.0" promptText="Genre" />
                        <TextField fx:id="Rating_text" layoutX="60.0" layoutY="31.0" prefHeight="59.0" prefWidth="237.0" promptText="Rating_text" />
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="65.0" prefWidth="852.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#UpdateAction" prefHeight="100.0" prefWidth="215.0" text="Update" />
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#Delete_button_Action" prefHeight="100.0" prefWidth="209.0" text="Delete" />
                        <ComboBox fx:id="Search_type_comboBox" prefWidth="150.0" />
                        <TextField fx:id="Search_value" />
                        <Button fx:id="Search_btn" layoutX="127.0" layoutY="10.0" mnemonicParsing="false" onAction="#ComicSearch_Action" prefHeight="100.0" prefWidth="180.0" text="Search" />
                        <Button fx:id="Insert_btn" layoutX="244.0" layoutY="10.0" mnemonicParsing="false" onAction="#InsertAction" prefHeight="100.0" prefWidth="194.0" text="Insert" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
